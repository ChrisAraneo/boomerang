{
  "name": "boomerang",
  "version": "0.0.1",
  "description": "Boomerang is a simple Node.js utility script used to test the reachability of a host.",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js --no-warnings",
    "lint": "eslint \"src/**/*.{ts,json}\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.spec.ts\" \"src/**/*.json\"",
    "chores": "npm run lint && npm run format",
    "test": "jest",
    "build": "tsup src/**/*.ts && node dev-scripts/copy-sound-file"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChrisAraneo/boomerang.git"
  },
  "keywords": [
    "ping",
    "network",
    "utility"
  ],
  "author": "Krzysztof PajÄ…k (Chris Araneo) <chris.araneo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChrisAraneo/boomerang/issues"
  },
  "homepage": "https://github.com/ChrisAraneo/boomerang#readme",
  "devDependencies": {
    "@types/jest": "^29.5.6",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.7.0",
    "@types/sound-play": "^1.1.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.1",
    "tsup": "^8.3.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.10.0"
  },
  "dependencies": {
    "command-line-args": "^6.0.1",
    "rxjs": "^7.8.1",
    "sound-play": "^1.1.0",
    "undici": "^6.18.1",
    "winston": "^3.13.0"
  }
}
